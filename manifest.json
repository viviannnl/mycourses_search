{
  "manifest_version": 3,
  "name": "MyCourses Transcript Search",
  "version": "1.0",
  "description": "Search through lecture recording transcripts in MyCourses",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.brightspace.com/*",
    "*://mycourses2.mcgill.ca/*",
    "*://*.mcgill.ca/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://mycourses2.mcgill.ca/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 